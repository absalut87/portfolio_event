    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp with Debug",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": ["--gulpfile", "${workspaceFolder}/gulpfile.js", "default"],
            "env": {
                "DEBUG": "browser-sync:*"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}